<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="0"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/mod"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:backgroundTint="@color/black"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_above="@id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="1"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:backgroundTint="@color/black"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="3"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:layout_above="@id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:backgroundTint="@color/black"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:backgroundTint="@color/black"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="6"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l4"
        android:layout_above="@id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:backgroundTint="@color/black"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:text="9"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l5"
        android:layout_above="@id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/black"
            android:text="*"
            android:textSize="50sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_above="@id/l5"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:backgroundTint="@color/black"
            android:text="C"/>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/l6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="80sp"/>
    </LinearLayout>
</RelativeLayout>